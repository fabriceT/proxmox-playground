resource "proxmox_virtual_environment_vm" "wm_ubuntu" {

  node_name = "pve"
  started   = false
  on_boot   = false

  name            = "terraform-ubuntu-vm"
  description     = "Managed by Terraform"
  tags            = ["test", "terraform", "IaC"]
  keyboard_layout = "fr"
  machine         = "q35"

  vga {
    type = "qxl"
  }

  disk {
    #datastore_id = "local-lvm"
    file_format = "raw"
    interface   = "virtio0"
    size        = 3
  }

  network_device {
    bridge = "vmbr0"
  }

  operating_system {
    type = "l26"
  }

  cdrom {
    enabled = true
  }
}
